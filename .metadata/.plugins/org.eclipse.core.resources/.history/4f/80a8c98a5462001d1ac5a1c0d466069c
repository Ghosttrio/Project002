// 메뉴명, 가격
import java.util.ArrayList;

public class Menu {

	ArrayList<String> alName;
	ArrayList<Integer> alPrice;

	

	Menu(){
		alName = new ArrayList<String>();
		alPrice = new ArrayList<Integer>();
	}
	
	void display() {

		// name : price
		// name : prices
		// 메뉴명, 가격 목록 출력

	}
	void setName(String alName) {
		
		this.alName = add(alName);
		
		
		
		
		
	}
	void setPrice() {
		for(i=0;i<alName.size();i++) {
			System.out.println(alName.get(i) + " : " + alPrice.get(i));
			}
//		setName이 한번 호출되면 이것도 출력
	}
}