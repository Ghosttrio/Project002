// 메뉴명, 가격
import java.util.ArrayList;

public class Menu {

	ArrayList<String> alName;
	ArrayList<Integer> alPrice;

	Menu(){
	}
	
	void display(String ) {
		for(i=0;i<alName.size();i++) {
		System.out.println(alName.get(i) + " : " + alPrice.get(i));
		}
		// name : price
		// name : price
		// 메뉴명, 가격 목록 출력

	}
	void setName(String name) {
		this.alName = alName;
	}
	void setPrice(int price) {
		this.alPrice = alPrice;
//		setName이 한번 호출되면 이것도 출력
	}
}